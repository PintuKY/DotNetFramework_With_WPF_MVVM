    <Resource Include="Res\Slider\Slide_Running.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Res\Slider\Slide_Sitting.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
