      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Res\Slider\Slide_Walking.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
