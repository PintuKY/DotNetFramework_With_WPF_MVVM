    <None Remove="Res\iconMinimize.png" />
    <None Remove="Res\iconRestoreDown.png" />
    <None Remove="Res\Slider\Slide_P_Plate.png" />
    <None Remove="Res\Slider\Slide_Running.png" />
    <None Remove="Res\Slider\Slide_Sitting.png" />
    <None Remove="Res\Slider\Slide_Standing.png" />
