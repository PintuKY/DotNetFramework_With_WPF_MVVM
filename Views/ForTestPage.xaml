<Window x:Class="SELF_KBM_DESIGN.Views.ForTestPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SELF_KBM_DESIGN.Views" 
        xmlns:viewmodels="clr-namespace:SELF_KBM_DESIGN.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="ForTestPage" Height="450" Width="800">
   <Window.Resources> 
        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="CoolVisConverter"/>
    </Window.Resources>

    <Grid>
        <Border x:Name="mainborder" Background="#FFFFFF" BorderBrush="Red" BorderThickness="3" CornerRadius="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="firstcol" Width="auto"/>
                    <ColumnDefinition x:Name="sescol" Width="auto"/>
                    <ColumnDefinition x:Name="sescol1" Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="rofirst" Height="auto"/>
                    <RowDefinition x:Name="secrow" Height="auto"/>
                    <RowDefinition x:Name="secrow2" Height="auto"/>
                    <RowDefinition x:Name="secrow3" Height="auto"/>
                    <RowDefinition x:Name="secrow4" Height="auto"/>
                    <RowDefinition x:Name="third" Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="1" Grid.Column="1" Background="#FFFFFF">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Name, Mode=OneWay }" FontSize="20" Width="230" Height="30" Foreground="White" Background="Black"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Grid.Column="1" Margin="10,10,10,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Enter Name (TwoWay Binding):"/>
                        <TextBox Text="{Binding Names, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                        <TextBlock Text="Your Name: " Margin="10"/>
                        <TextBlock Text="{Binding Names, Mode=TwoWay}" Margin="10" FontSize="16" Foreground="Green"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="3" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Enter Feedback (OneWayToSource):"/>
                        <TextBox Text="{Binding UserFeedback, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding FancyText}"  Visibility="{Binding ShowFancyText, Converter={StaticResource CoolVisConverter}, Mode=OneWay}"/>
                        <CheckBox Content="Show the label" IsChecked="{Binding ShowFancyText, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
