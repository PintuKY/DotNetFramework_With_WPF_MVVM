<Window x:Class="SELF_KBM_DESIGN.Views.Employee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SELF_KBM_DESIGN.Views"
        mc:Ignorable="d"
        Title="Employee" WindowState="Minimized" WindowStyle="None" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Height="450" Width="800"  MinWidth="1280" MinHeight="720">
    <Window.Resources>
        <Style x:Key="MinimizeNewButtonStyle" BasedOn="{StaticResource WindowNewButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Image Source="/Res/iconMinimize.png" Width="20" Height="20"/>
                    </ControlTemplate>                   
                </Setter.Value>              
            </Setter>
        </Style>
        <Style x:Key="MaximizeNewButtonStyle" BasedOn="{StaticResource WindowNewButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Image Source="/Res/iconMaximize.png" Width="20" Height="20"/>
                    </ControlTemplate>                    
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CloseNewButtonStyle" BasedOn="{StaticResource WindowNewButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Image Source="pack://application:,,,/Res/iconClose.png" Width="20" Height="20"/>                       
                    </ControlTemplate>                    
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>   
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#FDFDFD" Height="55" BorderThickness="0 2 0 0" CornerRadius="5" VerticalAlignment="Top" MouseDown="MouseDownHandler">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Image Source="/Res/FD-NewLogo.ico" Height="35" Margin="10 0 0 10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Margin="0 0 5 5" Grid.Column="2" Height="auto" Width="auto">
                            <Button x:Name="MinimizeIconBtn" Height="30" Width="50"  Style="{StaticResource MinimizeNewButtonStyle}" Visibility="Visible"/>
                            <Button x:Name="MaxmizeIconBtn" Height="30" Width="50"  Style="{StaticResource MaximizeNewButtonStyle}"/>
                            <Button x:Name="CloseIconBtn" Height="30" Width="50" Style="{StaticResource CloseNewButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
